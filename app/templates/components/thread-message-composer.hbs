<!-- Message composer -->
<div class="row">
	<div class="col-xs-12">
		<div class="thread-element media">
			<!-- Icon -->
			<div class="media-left">
				<div class="avatar">
					<i class="mdi-social-person"></i>
				</div>
			</div>

			<div {{bind-attr class=":thread-composer-parent :media-body isWriteMode:write-mode isWriteModeReply:write-mode-reply isWriteModeForward:write-mode-forward"}}>
				<div class="thread-precomposer">
					<p class="text-muted">Click here to <a {{action 'goToWriteModeReply'}} class='thread-precomposer-answer'>answer</a> or <a {{action 'goToWriteModeForward'}} class='thread-precomposer-forward'>forward</a> the message</p>
				</div>
				<div class="thread-composer form-group">

					<div class="thread-composer-row thread-composer-row-subject">
						<!-- Subject -->
						<input type="text" placeholder="Subject" class="thread-composer-subject"></input>
					</div>

					<div class="thread-composer-row thread-composer-row-to btn-group">
						<!-- Reply / Forward selector-->
						<div class="thread-composer-row-left">
							<a href="javascript:void(0)" class="thread-composer-destination-selector btn btn-default dropdown-toggle" data-toggle="dropdown"><i {{bind-attr class="isWriteModeReply:mdi-content-reply isWriteModeForward:mdi-content-forward"}}></i><span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li class="thread-composer-destination-selector-reply">
									<a href="javascript:void(0)"><i class="mdi-content-reply"></i> Reply</a>
								</li>
								<li class="thread-composer-destination-selector-forward">
									<a href="javascript:void(0)"><i class="mdi-content-forward"></i> Forward</a>
								</li>
								<hr/>
								<li>
									<a class="change-subject-link" href="javascript:void(0)">Change subject</a>
								</li>
							</ul>
						</div>

						<!-- To -->
						<div class="thread-composer-row-middle">
							<input class="to-people"></input>
						</div>

						<!-- Cc/Bcc link -->
						<div class="thread-composer-row-right">
							<a class="cc-link" href="javascript:void(0)">Cc</a>
							<a class="bcc-link" href="javascript:void(0)">Bcc</a>
						</div>
					</div>

					<div class="thread-composer-row thread-composer-row-cc btn-group">
						<!-- Cc -->
						<div class="thread-composer-row-centered">
							<input class="cc-people"></input>
						</div>
					</div>

					<div class="thread-composer-row thread-composer-row-bcc btn-group">
						<!-- Bcc -->
						<div class="thread-composer-row-centered">
							<input class="bcc-people"></input>
						</div>
					</div>

					<div class="thread-composer-row no-border no-background">
						<!-- Text editor -->
						<textarea id="editor" class="form-control" rows="10"></textarea>
					</div>
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary">Send</button>
				</div>
			</div>
		</div>
	</div>
</div>