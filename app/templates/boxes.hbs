<header>
	<nav class="top-bar" data-topbar>
		<ul class="title-area">
			<li class="name">
				<h1><a href="#">Erizo Mail</a></h1>
			</li>
		</ul>
	</nav>
</header>


<div class="row">
	<div class="small-3 columns">
		<div class="row">
			<div class="small-12 columns">
				<div class="erizo-bar icon-bar">
					<a class="item full-width"><i {{action 'showNewMessageBox'}} class="medium foundicon-mail"></i></a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="small-12 columns">
				<ul class="side-nav">
					{{#each box in model}}
					<li>
						{{box-item box=box}}
					</li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
	<div class="small-9 columns">
		{{outlet}}
	</div>
</div>


<footer>
</footer>

{{#if newMessageIsVisible}}
<div id="newMessages" class="new-messages">
	{{new-message message=newMessage hideAction="hideNewMessageBox" sendMessageAction="sendNewMessage"}}
</div>
{{/if}}

{{#if errorPopupIsVisible}}
<div id="error-popup-simple" class="popup">
	{{error-popup-simple}}
</div>
{{/if}}