<!-- Bottom bar -->
<nav id="bottom-toolbar" class="navbar navbar-default navbar-fixed-bottom nav-erizo" role="navigation" style="display:none">
	<div class="container-fluid">
		<div class="text-center">
			<button {{action "deleteSelectedMessages"}} class="btn btn-flat btn-default">
				<i class="mdi-action-delete"></i>
			</button>
		</div>
	</div>
</nav>

<div id="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<div class="message-list">
					<div class="list-group">
						{{#each messageCategory in model}}
							<div class="list-subgroup">
								<div class="subgroup-separator">{{messageCategory.label}}</div>

								{{#each message in messageCategory.messages}}
									{{message-row model=message}}
									<div class="list-group-separator"></div>
								{{/each}}


							</div>
						{{/each}}

						{{#if isMessagesLoading}}
							<div>
								<div class="loading-messages">
									<i class="mdi-notification-sync"></i>
								</div>
							</div>
						{{else}}
							{{#if hasMorePages}}
							<div class="load-more-messages">
								<button {{action "loadMoreMessages"}} class="btn btn-flat btn-default">
									More
								</button>
							</div>
							{{/if}}
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
